{
    "name": "htzone/sales-landing",
    "description": "HTZone Sales Landing Page",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-sqlite3": "*",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "classmap": [
            "class/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse -l 8 class tests"
    }
} 